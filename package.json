{
  "name": "romanmunar.github.io",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "prebuild": "test \"$CI\" = true && npx pnpm install -r --store=node_modules/.pnpm-store || echo skipping pnpm install",
    "build:images": "zx ./scripts/webp-convert.mjs",
    "build": "npm run build:images; astro build",
    "preview": "astro preview",
    "hard-clean": "rm -rf node_modules dist; pnpm install",
    "restart": "pnpm run hard-clean; astro dev"
  },
  "devDependencies": {
    "@tailwindcss/typography": "0.5.2",
    "astro": "0.25.4",
    "autoprefixer": "10.4.2",
    "date-fns": "2.28.0",
    "imagemin": "7.0.0",
    "imagemin-webp": "7.0.0",
    "postcss": "8.4.8",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "remark-code-titles": "0.1.2",
    "tailwindcss": "3.0.23",
    "zx": "6.0.7"
  },
  "dependencies": {
    "astro-icon": "0.6.0"
  }
}
